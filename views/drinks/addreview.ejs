<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New Review Form</title>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/drinks/selectType">Feed</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="box">
      <span id="big-text">Add a Review</span>
    </div>
    <div class="form-container">
      <form action="/drinks/<%=id%>/review/new" method="post" >
        <%# <div class="form-group">%>
          <label class="label-name">Rating</label>
          <input type="number" name="rating" class="input-box">
        <%# </div>%>
        <br>
        <br>
        <br>

        <div class="form-group">
          <label class="label-name2">Bitter:</label>
          <input type="number" name="bitter" class="input-box">
        </div>

        <br>

        <div class="form-group">
          <label class="label-name3">Sweet:</label>
          <input type="number" name="sweet" class="input-box">
        </div>

        <br>

        <div class="form-group">
          <label class="label-name4">Salty:</label>
          <input type="number" name="salty" class="input-box">
        </div>

        <br>

        <div class="form-group">
          <label class="label-name5">Sour:</label>
          <input type="number" name="sour" class="input-box">
        </div>

        <br>

        <div class="form-group">
          <label class="label-name6">Savory:</label>
          <input type="number" name="savory" class="input-box">
        </div>

        <br>

        <div class="form-group">
          <label class="label-name7">Thoughts:</label>
          <input type="text" name="thoughts" class="input-box">
        </div>

        <br>

        <div class="form-group">
          <input type="hidden" name="user" id="reviewUser" value="<%= user._id %>">
        </div>

        <br>

        <div class="form-group">
          <input type="submit" value="submit">
        </div>
      </form>
    </div>

    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/reviewForm.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </body>
</html>
